<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_circle_container"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="500dp"
    app:cardElevation="5dp">

    <!-- You can add any other elements you need within the table layout here -->


    <TextView
        android:id="@+id/player_number_text"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="12"/>

    <!-- You can add any other elements you need within the player circle layout here -->

</androidx.cardview.widget.CardView>