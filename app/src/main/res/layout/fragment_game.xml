<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constr_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_tableContainer"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeWidth="3dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="2005dp"
            android:layout_margin="20dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_margin="70dp"
                    android:id="@+id/cv_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:cardCornerRadius="2005dp"
                    app:cardElevation="10dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_upper"
                            android:layout_width="100dp"
                            android:layout_height="24dp"
                            android:alpha="0"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@id/tv_big"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.82"
                            tools:text="Smaller text" />

                    <TextView
                        android:id="@+id/tv_big"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="100sp"
                        android:textAlignment="center"
                        tools:text="34" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
        </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/btn_kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KILL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/btn_Foul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foul"
        app:layout_constraintBottom_toTopOf="@id/btn_kill"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/btn_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Nominate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Foul"
        />
    <Button
        android:id="@+id/btn_shrCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sheriff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_vote"
        />
    <Button
        android:id="@+id/btn_donCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_shrCheck"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPeep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:src="@drawable/baseline_undo_24"
            app:elevation="1dp"
            android:layout_margin="3dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/baseline_pause_24"
            app:elevation="1dp"
            android:layout_margin="3dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:src="@drawable/baseline_redo_24"
            app:elevation="1dp"
            android:layout_margin="3dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- debug -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_d_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(debug) STATE"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_d_universal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_d_universal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="sdoba"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_d_state"
        />

    <!-- There is no matter which layout will be used -->
    <!-- Absolutes set for the debug view -->
    <!-- TODO: change the @layout_width to match_parent -->
    <RelativeLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:viewBindingIgnore="true">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
